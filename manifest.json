{
  "manifest_version": 3,
  "name": "Anti-Impulse Shopping Buddy",
  "version": "1.0",
  "description": "AI detects impulse purchases and suggests alternatives.",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": [
      "https://acceptable.a-ads.com/*"
  ],
  "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'; frame-src https://acceptable.a-ads.com"
  },
  "background": {
      "service_worker": "background.js"
  },
  "content_scripts": [
      {
          "matches": ["*://*.amazon.com/*", "*://*.ebay.com/*", "*://*.shopify.com/*"],
          "js": ["content.js"]
      }
  ],
  "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
  },
  "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
  }
}
